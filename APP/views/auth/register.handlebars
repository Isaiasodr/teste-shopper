<form action="/register" method="post" class="form-register">

  <div class="register-container">
    <h1>Cadastro</h1>
    <div class="form-register-control">
      <label for="name">Nome</label>
      <input type="text" name="name" id="" placeholder="digite seu nome" />
    </div>
    <div class="form-register-control">
      <label for="email">Email</label>
      <input type="email" name="email"  placeholder="email@example"/>
    </div>
    <div class="form-register-control">
      <label for="password" style="padding-left:5px ;">Senha</label>
      <input style="margin-left: 5px;"
        type="password"
        name="password"
        id=""
        placeholder="digite a senha"
      />
    <div class="form-register-control">
      <label for="password">Confirmar Senha</label>
      <input
        type="password"
        name="confirmpassword"
        id=""
        placeholder="confirme sua senha"
      />
    </div>
    <input type="submit" value="login" />
    <p>já é cadastrado clique <a href="/login">aqui!</a></p>
  </div>

</form>